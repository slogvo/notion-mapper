{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "Node16",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@hooks/*": ["src/hooks/*"],
      "@ui/*": ["src/components/ui/*"]
    },
    "noEmit": true
  }
}